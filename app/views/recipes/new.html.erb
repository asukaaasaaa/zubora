<%= form_with model:@recipe,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, "料理名" %>
    <%= f.text_field :title, class: 'form-control recipe_title' %>
  </div>
  <div class="form-group">
    <%= f.label :imege, "画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :ingredient, "材料" %>
    <%= f.text_area :ingredient, class: 'form-control recipe_ingredient' %>
  </div>
  <div class="form-group">
    <%= f.label :body, "作り方" %>
    <%= f.text_area :body, class: 'form-control recipe_body' %>
  </div>
  <div class="form-group">
    <%= f.label :memo, "ポイント" %>
    <%= f.text_area :memo, class: 'form-control recipe_memo' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>